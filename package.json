{
  "name": "innei-tools",
  "private": true,
  "version": "0.10.3",
  "license": "MIT",
  "author": "Innei",
  "scripts": {
    "postinstall": "husky install"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "bump": {
    "mode": "monorepo",
    "packages": [
      "packages/*"
    ],
    "publish": true
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,css,scss}": [
      "prettier --ignore-path ./.prettierignore --write "
    ],
    "*.{js,jsx,ts,tsx}": [
      "eslint "
    ]
  },
  "eslintConfig": {
    "extends": [
      "@innei/eslint-config-ts"
    ]
  },
  "devDependencies": {
    "@innei/eslint-config-ts": "workspace:*",
    "@innei/prettier": "workspace:*",
    "husky": "8.0.3",
    "lint-staged": "13.2.3",
    "prettier": "3.0.0",
    "rimraf": "5.0.1",
    "typescript": "5.1.6"
  }
}
