{
  "name": "innei-tools",
  "private": true,
  "version": "0.13.2",
  "license": "MIT",
  "author": "Innei",
  "scripts": {
    "postinstall": "husky install"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "bump": {
    "mode": "monorepo",
    "packages": [
      "packages/*"
    ],
    "publish": true
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,css,scss}": [
      "prettier --ignore-path ./.prettierignore --write "
    ],
    "*.{js,jsx,ts,tsx}": [
      "eslint "
    ]
  },
  "eslintConfig": {
    "extends": [
      "@innei/eslint-config-ts"
    ]
  },
  "devDependencies": {
    "@innei/eslint-config-ts": "workspace:*",
    "@innei/prettier": "workspace:*",
    "husky": "9.0.11",
    "lint-staged": "15.2.7",
    "prettier": "3.3.2",
    "rimraf": "5.0.7",
    "typescript": "5.4.5"
  }
}
