{
  "name": "innei-tools",
  "private": true,
  "license": "MIT",
  "author": "Innei",
  "scripts": {
    "postinstall": "husky install",
    "publish": "pnpm publish --access=public -r"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,css,scss}": [
      "prettier --ignore-path ./.prettierignore --write "
    ],
    "*.{js,jsx,ts,tsx}": [
      "eslint "
    ]
  },
  "eslintConfig": {
    "extends": [
      "@innei-util/eslint-config-ts"
    ]
  },
  "devDependencies": {
    "@innei-util/eslint-config-ts": "workspace:*",
    "@innei-util/prettier": "workspace:*",
    "husky": "7.0.4",
    "lint-staged": "12.3.3",
    "prettier": "2.5.1",
    "rimraf": "3.0.2",
    "typescript": "4.5.5"
  }
}