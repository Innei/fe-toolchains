{
  "name": "innei-tools",
  "private": true,
  "license": "MIT",
  "author": "Innei",
  "scripts": {
    "postinstall": "husky install"
  },
 
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,css,scss}": [
      "prettier --ignore-path ./.prettierignore --write "
    ],
    "*.{js,jsx,ts,tsx}": [
      "eslint "
    ]
  },
  "eslintConfig": {
    "extends": [
      "@innei-util/eslint-config-ts"
    ]
  },
  "devDependencies": {
    "@innei-util/eslint-config-ts": "workspace:*",
    "@innei-util/prettier": "workspace:*",
    "husky": "7.0.4",
    "lint-staged": "11.2.6",
    "prettier": "2.5.1",
    "rimraf": "3.0.2",
    "typescript": "4.4.4"
  }
}