{
  "name": "innei-tools",
  "private": true,
  "license": "MIT",
  "author": "Innei",
  "scripts": {
    "postinstall": "husky install"
  },
  "simple-git-hooks": {
    "pre-commit": "yarn lint-staged",
    "commit-msg": "yarn commitlint --edit $1"
  },
  "commitlint": {
    "extends": [
      "@innei-util/commitlint-standard-config"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,css,scss}": [
      "prettier --ignore-path ./.prettierignore --write "
    ],
    "*.{js,jsx,ts,tsx}": [
      "eslint "
    ]
  },
  "eslintConfig": {
    "extends": [
      "@innei-util/eslint-ts"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "13.1.0",
    "@innei-util/eslint-ts": "workspace:*",
    "@innei-util/prettier": "workspace:*",
    "husky": "7.0.2",
    "lint-staged": "11.1.2",
    "prettier": "2.3.2",
    "rimraf": "3.0.2",
    "simple-git-hooks": "2.6.1",
    "typescript": "4.4.2"
  }
}