{
  "name": "innei-tools",
  "private": true,
  "version": "0.9.4",
  "license": "MIT",
  "author": "Innei",
  "scripts": {
    "postinstall": "husky install",
    "release": "tsx scripts/release.ts && npm run publish",
    "publish": "zx scripts/publish.mjs"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,css,scss}": [
      "prettier --ignore-path ./.prettierignore --write "
    ],
    "*.{js,jsx,ts,tsx}": [
      "eslint "
    ]
  },
  "eslintConfig": {
    "extends": [
      "@innei/eslint-config-ts"
    ]
  },
  "devDependencies": {
    "@innei/eslint-config-ts": "workspace:*",
    "@innei/prettier": "workspace:*",
    "@types/debug": "^4.1.7",
    "@types/prompts": "^2.4.0",
    "@types/semver": "^7.3.10",
    "consola": "2.15.3",
    "husky": "8.0.1",
    "lint-staged": "13.0.3",
    "prettier": "2.7.1",
    "prompts": "2.4.2",
    "rimraf": "3.0.2",
    "typescript": "4.7.4",
    "zx": "7.0.8"
  }
}
